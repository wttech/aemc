    "version": "0.2.0",
    "configurations": [
        {
            "name": "Print help",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/aem",
            "args": ["--help"],
            "env": {},
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Replicate node",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/aem",
            "args": ["repl", "activate", "-A", "--path", "/content/projects/jcr:content"],
            "env": {},
            "cwd": "${workspaceFolder}"
        }
    ]
}